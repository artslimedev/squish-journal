    <div class="formPage">
      <!--ENTRY FORM-->
      <div class="container journalForm">
        <section class="titlebar">
          <h1 class="entryTitle">Add:</h1>

          <div class="journalEmoji">
            <div class="emojiContainer">
              <label for="happy" class="emojiLabel">
                <input
                  type="radio"
                  name="moodItem"
                  id="happy"
                  value="happy"
                  class="emojiInput"
                  form="journalEntry"
                />
                <iconify-icon
                  icon="fa6-regular:face-smile"
                  class="emojiFace"
                ></iconify-icon>
              </label>
            </div>

            <div class="emojiContainer">
              <label for="meh" class="emojiLabel">
                <input
                  type="radio"
                  name="moodItem"
                  id="meh"
                  value="meh"
                  class="emojiInput"
                  form="journalEntry"
                />
                <iconify-icon
                  icon="fa6-regular:face-meh"
                  class="emojiFace"
                ></iconify-icon>
              </label>
            </div>

            <div class="emojiContainer">
              <label for="annoyed" class="emojiLabel">
                <input
                  type="radio"
                  name="moodItem"
                  id="annoyed"
                  value="annoyed"
                  class="emojiInput"
                  form="journalEntry"
                />
                <iconify-icon
                  icon="fa6-regular:face-rolling-eyes"
                  class="emojiFace"
                ></iconify-icon>
              </label>
            </div>

            <div class="emojiContainer">
              <label for="angry" class="emojiLabel">
                <input
                  type="radio"
                  name="moodItem"
                  id="angry"
                  value="angry"
                  class="emojiInput"
                  form="journalEntry"
                />
                <iconify-icon
                  icon="fa6-regular:face-angry"
                  class="emojiFace"
                ></iconify-icon>
              </label>
            </div>

            <div class="emojiContainer">
              <label for="sad" class="emojiLabel">
                <input
                  type="radio"
                  name="moodItem"
                  id="sad"
                  value="sad"
                  class="emojiInput"
                  form="journalEntry"
                />
                <iconify-icon
                  icon="fa6-regular:face-frown"
                  class="emojiFace"
                ></iconify-icon>
              </label>
            </div>
          </div>
        </section>

        <section class="journalInputs">
          <form
            action="/journal"
            class="entry"
            autocomplete="off"
            method="POST"
            id="journalEntry"
          >
            <label for="date">
              Date:
              <input type="date" name="dateItem" id="date" class="formInputs" />
            </label>

            <label for="title">
              Title:
              <input
                type="text"
                name="titleItem"
                placeholder="(what sticks out from today?)"
                id="title"
                class="formInputs"
                size="30"
              />
            </label>

            <div class="entryText">
              <textarea
                name="entryItem"
                id="entry"
                required
                rows="5"
                cols="200"
              ></textarea>
            </div>

            <input type="submit" value="Submit" class="submit" />
          </form>
        </section>
      </div>
    </div>
  </body>
</html>
